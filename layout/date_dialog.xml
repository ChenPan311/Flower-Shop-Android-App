<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background">

    <!--Header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:text="@string/popUp_header"
        style="@style/DialogHeaderTextStyle"
        android:alpha="0.85"/>
    <!--Header-->


    <!--Date Picker-->
    <TextView
        android:id="@+id/date_dlg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/select_delivery_day"
        style="@style/TextStyle"/>

    <DatePicker
        android:id="@+id/date_dlg_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorTransPurple"
        android:minDate="04/13/2020"
        android:maxDate="04/13/2021"/>
    <!--Date Picker-->

</LinearLayout>